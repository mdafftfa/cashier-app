generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cart {
  id          Int      @id @default(autoincrement())
  productId   Int
  amount      Int
  description String
  createdAt   DateTime @default(now())
}

model Category {
  id   Int    @id @default(autoincrement())
  name String
}

model Product {
  id       Int     @id @default(autoincrement())
  code     String
  name     String
  price    Int
  isReady  Boolean
  image    String
  category Json
}
